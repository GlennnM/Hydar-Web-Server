<?xml version="1.0"?>
<project name="the project" default="compile" basedir="../">

	<property name="src.dir" location="Chat-Room/src/main/webapp" />
	<property name="bin.dir" location="Chat-Room/src/main/webapp" />
	<property name="lib.dir" location="Chat-Room/src/main/webapp/lib" />

	<path id="classpath">
		<fileset dir="${lib.dir}" includes="**/*.jar" />
	</path>

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp />
	</target>



	<target name="compile" depends="init" description="compile the Java source code to class files">
		<javac srcdir="${src.dir}" destdir="${bin.dir}" classpathref="classpath" />
	</target>

</project>
